extends layout

block content
    .w3-card-4
        header.w3-containter.w3-blue
            h1
                span Students List
                a.w3-btn.w3-round.w3-grey.w3-margin-left(href="/alunos/registo") +
        .w3-container
            table.w3-table-all
                    thead
                        tr
                            th ID
                            th Nome
                            th GitLink
                    tbody
                        each aluno in alunos
                            tr
                                td= aluno._id
                                td= aluno.nome
                                td
                                    a(href=aluno.gitlink)= aluno.gitlink
                                td
                                    a(href=`/alunos/edit/${aluno._id}`) Editar
                                td
                                    a(href=`/alunos/delete/${aluno._id}`) Apagar
        footer.w3-container.w3-blue 
            address Generated by EngWeb2025 class