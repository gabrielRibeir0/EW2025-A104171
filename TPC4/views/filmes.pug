extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= title
    .w3-container
      table.w3-table-all 
        tr
          th Ano
          th Título
          th Elenco
          th Géneros
          th Opts
        each filme in lfilmes
          tr
            td= filme.year
            td= filme.title
            td
                ul.w3-ul 
                    each ator in filme.cast
                        li
                          a(href='/actor/' + ator) #{ator}
            td
                ul.w3-ul 
                    each genre in filme.genres
                        li= genre
            td
              a(href='/movies/edit/' + filme.id).w3-btn.w3-blue Editar
              a(href='/movies/delete/' + filme.id).w3-btn.w3-red Apagar 
    footer.w3.container.w3-blue 
