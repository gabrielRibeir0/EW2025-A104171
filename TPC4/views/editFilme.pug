extends layout

block content 
    .w3-card-4
    header.w3-container.w3-blue 
      h1 Editar Filme
    form.w3-containser(method='POST')
        fieldset 
            legend Dados do Filme
            label Id
            input.w3-input(type='text', name='id', value=filme.id, readonly)
            label Título
            input.w3-input(type='text', name='title', value=filme.title)
            label Ano
            input.w3-input(type='text', name='year', value=filme.year)
        fieldset 
            legend Elenco
            each ator in filme.cast
                input.w3-check(type='checkbox', name='cast', value=ator, checked)
                label #{ator}
            .w3-row.w3-margin-top
                label Adicionar Novos Atores (separados por vírgula)
                    input.w3-input(type='text', name='newCast', placeholder='Ator1, Ator2, Ator3...')
        fieldset
            legend Géneros
            each genre in filme.genres
                input.w3-check(type='checkbox', name='genres', value=genre, checked)
                label #{genre}
            .w3-row.w3-margin-top
                label Adicionar Novos Géneros (separados por vírgula)
                    input.w3-input(type='text', name='newGenres', placeholder='Género1, Género2, Género3...')
        br
        button.w3-btn.w3-blue.w3-mb-2(type='submit') Gravar
    footer.w3.container.w3-blue 
