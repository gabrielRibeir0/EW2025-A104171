extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue 
            h1 #{nome_entidade} - #{nipc}
        .w3-container
            h2 Contratos da entidade
            table.w3-table-all 
                tr
                    th ID
                    th Objeto
                    th Data Celebração
                    th Preço (€)
                    th NIPC Entidade
                    th Nome Entidade
                each contrato in listaContratos
                    tr
                        td
                            a(href='/' + contrato._id)= contrato._id
                        td= contrato.objectoContrato
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td
                            a(href='/entidades/' + contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante
                        td= contrato.entidade_comunicante
            h2 Somatório dos Valores dos Contratos
            span.w3-large #{somatorioContratos} €
        footer.w3.container.w3-blue 
            adress
                a(href='/') Voltar à Lista de Contratos